@page
@model SwissMex.RazorPages.Pages.Categories.DeleteModel
<form method="post">
    <input type="hidden" asp-for="Category.Id" />
    <div class="border p-3 mt-4">
        <div class="row pb-3">
            <h2>
                Modificar categoría
            </h2>
            <hr />
        </div>

        <div class="text-danger" asp-validation-summary="ModelOnly">
        </div>

        <div class="mb-3">
            <label asp-for="Category.Name"></label>
            <input type="text" class="form-control" asp-for="Category.Name" />
            <span class="text-danger" asp-validation-for="Category.Name"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Category.DisplayOrder"></label>
            <input type="number" class="form-control" asp-for="Category.DisplayOrder" />
            <span class="text-danger" asp-validation-for="Category.DisplayOrder"></span>
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control" type="submit">Borrar</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-page="/Categories/Index" class="btn btn-secondary form-control">Regresar a la lista</a>
            </div>
        </div>

    </div>
</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
