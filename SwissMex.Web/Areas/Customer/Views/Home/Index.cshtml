@model IEnumerable<Product>

<div class="row pb-3">

    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12 p-1" style="border: 3px solid #444; border-radius: 10px;">
                    <div class="card">
                        <img src="@product.ImageUrl" />
                        <div class="card-body">
                            <div class="p-1">
                                <p class="card-title h5 text-primary">@product.Title</p>
                                <p class="card-title text-info">Marca: @product.Brand</p>
                            </div>

                            <div class="p-1">
                                <p>Precio de Lista: <strike><b>$@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>

                            <div class="p-1">
                                <p>Mayoreo: <b>$@product.Price50.ToString("0.00")</b></p>
                            </div>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-primary form-control mt-2" asp-route-productId="@product.Id">Detalles</a>
                    </div>
                </div>
            </div>
        </div>

    }



</div> 
