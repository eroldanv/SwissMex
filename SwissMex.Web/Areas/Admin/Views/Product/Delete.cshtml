@model Product


<div class="card bg-light mb-3">

    <div class="card-body">
        <div class="card-title text-primary">Borrar Producto</div>
        <p class="card-text">
           
            <form method="post" class="row">
                <div class="mt-0 row">

                    <div class="col-12 py-2">
                        <label asp-for="Title" class="ms-1 mt-1"></label>
                        <input disabled asp-for="Title" type="text" class="form-control border-0 shadow">                        
                    </div>

                    <div class="col-12 py-2">
                        <label asp-for="Description" class="ms-1 mt-1"></label>
                        <input disabled type="text" asp-for="Description" class="form-control border-0 shadow" />
                    </div>

                    <div class="col-6 py-2">
                        <label asp-for="PartNumber" class="ms-1 mt-1"></label>
                        <input disabled asp-for="PartNumber" class="form-control border-0 shadow" />
                    </div>

                    <div class="col-6 py-2">
                        <label asp-for="Brand" class="ms-1 mt-1"></label>
                        <input disabled asp-for="Brand" class="form-control border-0 shadow" />
                    </div>

                    <div class="col-6 py-2">
                        <label asp-for="Price" class="ms-1 mt-1"></label>
                        <input disabled type="number" asp-for="Price" class="form-control border-0 shadow" />
                    </div>

                    <div class="col-6 py-2">
                        <label asp-for="ListPrice" class="ms-1 mt-1"></label>
                        <input disabled asp-for="ListPrice" class="form-control border-0 shadow" />
                    </div>

                    <div class="col-6 py-2">
                        <label asp-for="Price25" class="ms-1 mt-1"></label>
                        <input disabled asp-for="Price25" class="form-control border-0 shadow" />
                    </div>

                    <div class="col-6 py-2">
                        <label asp-for="Price50" class="ms-1 mt-1"></label>
                        <input disabled asp-for="Price50" class="form-control border-0 shadow" />
                    </div>

                    <div class="row mt-4">
                        <div class="col-6 col-md-3">
                            <button class="btn btn-danger form-control" type="submit">Borrar</button>
                        </div>
                        <div class="col-6 col-md-3">
                            <a class="btn btn-outline-info form-control" asp-controller="Product" asp-action="Index">Cancelar</a>
                        </div>
                    </div>
                </div>
            </form>
        </p>
    </div>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}
