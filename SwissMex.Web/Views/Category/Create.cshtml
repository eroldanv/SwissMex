@model Category

<form method="post">
    <div class="border p-3 mt-4 ">
        <div class="row pb-2">
            <h2 class="text-primary">
                Nueva Categoría
            </h2>
            <hr />

        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Nombre</label>
            <input asp-for="Name" type="text" class="form-control"/>
        </div>
        <div class="mb-3 row p-1">
            <label class="p-0">Prioridad</label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
        </div>
        <div class="row" > 
            <div class="col-6 col-md-3">
                <button class="btn btn-primary form-control" type="submit">Agregar</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-info form-control" asp-controller="Category" asp-action="Index">Cancelar</a>
            </div>

        </div>
        
       

    </div>
</form>