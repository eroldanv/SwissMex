@model Category

<form method="post">
    <div class="border p-3 mt-4 ">
        <div class="row pb-2">
            <h2 class="text-primary">
                Borrar Categoría
            </h2>
            <hr />

        </div>

        @* <div asp-validation-summary="All"></div> *@
        @* <div asp-validation-summary="ModelOnly"></div> *@

        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled type="text" class="form-control" />
           
        </div>
        <div class="mb-3 row p-1">
            <label asp-for="DisplayOrder" class="p-0"></label>
            <input asp-for="DisplayOrder" disabled class="form-control" />
           
        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button class="btn btn-danger form-control" type="submit">Borrar</button>
            </div>
            <div class="col-6 col-md-3">
                <a class="btn btn-outline-info form-control" asp-controller="Category" asp-action="Index">Cancelar</a>
            </div>

        </div>



    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}