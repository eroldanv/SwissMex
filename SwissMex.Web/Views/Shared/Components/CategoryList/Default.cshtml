
@{
    if (TempData["FullRender"] != null && Boolean.Parse(TempData["FullRender"]!.ToString()!))
    {
        Layout = "_Layout";
    }
}
@model List<Category>

<div class="container">
    <div class="row pt-4 pb-4">
        <div class="col-6">
            <h2 class="text-primary">
                Lista de Categorías
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary px-4"><i class="bi bi-plus-circle"></i> Nueva categoría</a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Categoría</th>
                <th>Orden</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cat in Model.OrderBy(m => m.DisplayOrder))
            {

                <tr>
                    <td>
                        @cat.Name
                    </td>
                    <td>
                        @cat.DisplayOrder
                    </td>
                    <td class="text-center">
                        <div class="w-50 btn-group" role="group">
                            <a asp-controller="Category" asp-route-id="@cat.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square">&nbsp;Editar</i>
                            </a>
                            <a asp-controller="Category" asp-route-id="@cat.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="bi bi-trash">&nbsp;Borrar</i>
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>